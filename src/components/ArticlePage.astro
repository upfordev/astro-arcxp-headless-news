---
import type { ArcArticle } from '../services/articleService';
import ArticleHeader from './article/ArticleHeader.astro';
import ArticleBody from './article/ArticleBody.astro';

interface Props {
  article: ArcArticle;
}

const { article } = Astro.props;
---

<div class="article-container max-w-screen-xl mx-auto px-4 py-8">
  {article ? (
    <div class="article-layout flex flex-col lg:flex-row gap-8">
      <!-- Main article content -->
      <div class="article-content flex-1 max-w-3xl">
        <ArticleHeader article={article} />
        <ArticleBody article={article} />
      </div>

      <!-- Right rail -->
      <aside class="right-rail lg:w-72 shrink-0">
        <!-- Popular stories section -->
        <div class="popular-stories bg-gray-50 p-4 mb-6 rounded-md">
          <h3 class="text-lg font-bold mb-4 border-b border-gray-200 pb-2">TRENDING ARTICLES</h3>
          <ul class="space-y-4">
            {[1, 2, 3, 4].map(() => (
              <li class="border-b border-gray-200 pb-3">
                <a href="#" class="hover:text-primary">
                  <h4 class="font-semibold text-sm">Placeholder headline for a popular article that would appear in the right rail</h4>
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Advertisement slot -->
        <div class="ad-slot bg-gray-100 p-4 mb-6 text-center text-gray-500 rounded-md">
          <p class="text-sm">ADVERTISEMENT</p>
          <div class="h-60 flex items-center justify-center border border-gray-200">
            <span>Ad Content</span>
          </div>
        </div>

        <!-- Newsletter signup -->
        <div class="newsletter-signup bg-gray-50 p-4 mb-6 rounded-md">
          <h3 class="text-lg font-bold mb-2">NEWSLETTER</h3>
          <p class="text-sm text-gray-600 mb-4">Get the latest news delivered to your inbox daily.</p>
          <form class="flex flex-col gap-2">
            <input
              type="email"
              placeholder="Your email"
              class="px-3 py-2 border border-gray-300 rounded-md"
            />
            <button type="submit" class="px-3 py-2 bg-primary text-white rounded-md hover:bg-primary-dark transition-colors">Subscribe</button>
          </form>
        </div>

        <!-- Related topics -->
        <div class="related-topics bg-gray-50 p-4 rounded-md">
          <h3 class="text-lg font-bold mb-4 border-b border-gray-200 pb-2">RELATED TOPICS</h3>
          <div class="flex flex-wrap gap-2">
            {['Politics', 'World News', 'Entertainment', 'Technology', 'Business', 'Science'].map((topic) => (
              <a href="#" class="px-3 py-1 bg-gray-200 text-gray-700 rounded-full text-sm hover:bg-primary hover:text-white transition-colors">
                {topic}
              </a>
            ))}
          </div>
        </div>
      </aside>
    </div>
  ) : (
    <div class="text-center py-12">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Article Not Found</h2>
      <p class="text-gray-600">The article you're looking for could not be found.</p>
      <a href="/" class="inline-block mt-6 px-6 py-2 bg-primary text-white rounded-md hover:bg-primary-dark transition-colors">Return to Homepage</a>
    </div>
  )}
</div>
