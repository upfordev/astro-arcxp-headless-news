---
import type { ArcArticle } from '../services/articleService';
import ArticleHeader from './article/ArticleHeader.astro';
import ArticleBody from './article/ArticleBody.astro';

interface Props {
  article: ArcArticle;
}

const { article } = Astro.props;
---

<div class="article-container max-w-screen-xl mx-auto px-4 py-8">
  {article ? (
    <div class="article-content max-w-3xl mx-auto">
      <ArticleHeader article={article} />
      <ArticleBody article={article} />
    </div>
  ) : (
    <div class="text-center py-12">
      <h2 class="text-2xl font-bold text-gray-800 mb-4">Article Not Found</h2>
      <p class="text-gray-600">The article you're looking for could not be found.</p>
      <a href="/" class="inline-block mt-6 px-6 py-2 bg-primary text-white rounded-md hover:bg-primary-dark transition-colors">Return to Homepage</a>
    </div>
  )}
</div>
