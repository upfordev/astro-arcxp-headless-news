---
import type { ArcContentElement } from '../../services/articleService';

interface Props {
  element: ArcContentElement;
}

const { element } = Astro.props;
const content = element.content || '';
const citation = element.citation?.content || '';
---

<div class="quote-block my-6">
  <blockquote class="text-xl italic font-semibold text-gray-700 border-l-4 border-primary pl-4 py-2">
    <div set:html={content} />
    
    {citation && (
      <footer class="text-sm font-normal text-gray-500 mt-2">
        â€” <cite set:html={citation} />
      </footer>
    )}
  </blockquote>
</div>
